                    <TextBox Grid.Column="1" TextWrapping="Wrap" Text="" Width="160" FontSize="18" HorizontalAlignment="Left" Margin="221,45,0,25" Grid.RowSpan="2"/>
                    <Label Grid.Column="1" Grid.Row="1" Content="Release date:" Height="40" Width="145" FontSize="22" HorizontalAlignment="Left" Margin="236,47,0,14" Grid.RowSpan="2"/>
                    <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="" Width="160" FontSize="18" HorizontalAlignment="Left" Margin="221,45,0,25" Grid.RowSpan="2"/>
                    <Label Grid.Column="1" Grid.Row="4" Content="Room id:" Height="40" Width="100" FontSize="22" HorizontalAlignment="Right" Margin="0,0,40,0"/>
                    <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Text="" Width="160" FontSize="18" HorizontalAlignment="Left" Margin="221,45,0,25" Grid.RowSpan="2"/>
