<Window x:Class="zdravstvena_ustanova.View.Windows.DoctorWindows.HolidayRequestStatusReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zdravstvena_ustanova.View.Windows.DoctorWindows"
        mc:Ignorable="d"
        Title="HolidayRequestStatusReviewWindow" Height="450" Width="800" Background="#067c7b" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Content="HOLIDAY REQUEST" HorizontalAlignment="Left" Margin="287,20,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="211" FontSize="24"/>
        <DatePicker x:Name="StartDateDatePicker" HorizontalAlignment="Left" Margin="100,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="172" FontSize="20"/>
        <Label Content="StartDate" HorizontalAlignment="Left" Margin="100,103,0,0" VerticalAlignment="Top" Width="121" FontSize="22" Grid.RowSpan="2"/>
        <Label Content="EndDate" HorizontalAlignment="Left" Margin="100,15,0,0" Grid.Row="2" VerticalAlignment="Top" Width="109" FontSize="22"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="260,42,0,0" VerticalAlignment="Top" Grid.Row="3" Height="48" Width="114" Grid.Column="1" Click="Button_Click_Submit"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Grid.Row="3" Height="48" Width="114" Grid.Column="1" Click="Button_Click_Cancel"/>
        <DatePicker x:Name="EndDateDatePicker" HorizontalAlignment="Left" Margin="100,48,0,0" Grid.Row="2" VerticalAlignment="Top" Width="172" FontSize="20"/>
        <Label Content="RequestStatus" HorizontalAlignment="Left" Margin="79,103,0,0" VerticalAlignment="Top" Width="178" FontSize="22" Grid.Column="1" Grid.RowSpan="2"/>
        <TextBox x:Name="RequestStatusTextBox" HorizontalAlignment="Left" Margin="79,34,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" FontSize="22" Grid.Column="1"/>
        <Label Content="ReasonForDenial" HorizontalAlignment="Left" Margin="79,20,0,0" VerticalAlignment="Top" Width="178" FontSize="22" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="ReasonForDenialTextBox" HorizontalAlignment="Left" Margin="79,54,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" FontSize="22" Grid.Column="1" Height="55" Grid.RowSpan="2"/>
    </Grid>
</Window>
