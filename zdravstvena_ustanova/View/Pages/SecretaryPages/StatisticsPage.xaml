<Page x:Class="zdravstvena_ustanova.View.Pages.SecretaryPages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zdravstvena_ustanova.View.Pages.SecretaryPages"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1024"
      Height="620" Width="1024"
      Title="StatisticsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Button x:Name="pdfBTN" Grid.Column="2" Content="Generisi" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Width="100" Height="50" Click="pdfBTN_Click"/>
        <DatePicker x:Name="startDP" HorizontalAlignment="Left" Margin="141,0,0,0" VerticalAlignment="Center" FontSize="24"/>
        <DatePicker x:Name="endDP" Grid.Column="1" HorizontalAlignment="Left" Margin="102,0,0,0" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</Page>
