<UserControl x:Class="zdravstvena_ustanova.View.Notes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:zdravstvena_ustanova.View"
             mc:Ignorable="d" 
             d:DesignHeight="584" d:DesignWidth="596">
    <Grid>
        <ListView x:Name="notesList" Margin="26,59,40,110" ItemsSource="{Binding Note}" PreviewKeyDown="entered">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="250" Header="Naslov beleske" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="250" Header="Vreme dnevnog obavestavanja" DisplayMemberBinding="{Binding Time}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label FontSize="20" Content="Spisak kreiranih beleski :" HorizontalAlignment="Left" Margin="28,17,0,0" VerticalAlignment="Top"/>
        <Button Content="Kreiraj" HorizontalAlignment="Left" Margin="171,510,0,0" VerticalAlignment="Top" Height="33" Width="63" Click="goToCreateNote"/>
        <Button Content="Obrisi" HorizontalAlignment="Left" Margin="362,510,0,0" VerticalAlignment="Top" Height="33" Width="65" IsEnabled="False"/>

    </Grid>
</UserControl>
